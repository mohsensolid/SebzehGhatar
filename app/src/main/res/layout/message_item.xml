<?xml version="1.0" encoding="utf-8"?>
<com.example.solid.mindgame.ui.sebseGhatar.chat.ChatItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bubbuleHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/balloon_hangout_block_incoming"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="vertical">

            <io.github.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/messageTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/large_text_size"
                app:emojiconSize="@dimen/very_large_text_size"
                tools:text="تست" />
        </LinearLayout>

    </LinearLayout>

</com.example.solid.mindgame.ui.sebseGhatar.chat.ChatItem>